    <!-- Modal create Movie  -->
    <!-- The Modal -->
    <div class="modal" id="createMovie">
      <div class="modal-dialog">
        <div class="modal-content">
          <!-- Modal Header -->
          <div class="modal-header">
            <h4 class="modal-title">Create Movie</h4>
            <button type="button" class="close" data-dismiss="modal">
              &times;
            </button>
          </div>

          <!-- Modal body -->
          <div class="modal-body">
            <form
              class="ml-3"
              action="/v1/movie/add"
              method='POST'
              enctype="multipart/form-data"
            >
              <div class="form-group">
                <label for="tentruyen">Name:</label>
                <input
                  type="text"
                  class="form-control-file pl-2"
                  id="tentruyen"
                  placeholder="tên phim (vd: đấu la đại lục) "
                  name="name"
                />
              </div>
              <div class="form-group">
                <label for="screenwriter">Screenwriter:</label>
                <input
                  type="text"
                  class="form-control-file pl-2"
                  id="screenwriter"
                  placeholder=" người biên kịch của bộ phim .."
                  name="screenwriter"
                />
              </div>
              <div class="form-group">
                <label for="directer">Directer:</label>
                <input
                  type="text"
                  class="form-control-file pl-2"
                  id="directer"
                  placeholder="Đạo diễn phim ..."
                  name="directer"
                />
              </div>
              <div class="form-group">
                <label for="link">Country :</label>
                <select name="country" class="custom-select mb-3">
                  <option selected>Trung Quốc</option>
                  <option selected>Âu Mỹ</option>
                  <option selected>Hàn Quốc</option>
                  <option selected>Việt Nam</option>

                </select>
              </div>
              <div class="form-group">
                <label for="link">Language :</label>
                <select name="language" class="custom-select mb-3">
                  <option selected>VietSub</option>
                  <option selected>Tiếng Việt</option>
                  <option selected>Tiếng Anh</option>
                  <option selected>Tiếng Trung</option>
                </select>
              </div>
              <div class="form-group">
                <label for="years">Years:</label>
                <input
                  type="text"
                  class="form-control-file pl-2"
                  id="years"
                  placeholder=" Năm phát hành phim "
                  name="years"
                />
              </div>
              <div class="form-group">
                <label for="duration">Duration:</label>
                <input
                  type="text"
                  class="form-control-file pl-2"
                  id="duration"
                  placeholder="ngày bắt đầu khởi chiếu.."
                  name="duration"
                />
              </div>
              <div class="form-group">
                <label for="cover_img">Link Image:</label>
                <input
                  type="text"
                  class="form-control-file pl-2"
                  id="cover_img"
                  placeholder="Link hình ảnh của phim"
                  name="cover_img"
                />
              </div>
              <div class="form-group">
                <label for="trailer">Link trailer:</label>
                <input
                  type="text"
                  class="form-control-file pl-2"
                  id="trailer"
                  placeholder="Link trailer (là id của youtube)"
                  name="trailer"
                />
              </div>

              <div class="form-group">
                <label for="introduction">Introduction :</label>
                <textarea
                  class="form-control pl-2"
                  placeholder="thông tin của phim..."
                  rows="5"
                  id="introduction"
                  name="introduction"
                ></textarea>
              </div>
          </div>
          <!-- Modal footer -->
          <div class="modal-footer">
            <button type="button" class="btn btn-primary" data-dismiss="modal">
              Cancel
            </button>
            <button type="submit" data-dismiss="modal" class="btn btn-danger mb-2">Add</button>
          </div>
        </form>
        </div>
      </div>
